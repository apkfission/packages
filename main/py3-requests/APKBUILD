pkgname=py3-requests
pkgver=2.20.1
pkgrel=0
pkgdesc="Simple Python library for handling HTTP requests"
url="http://docs.python-requests.org/en/master/"
arch="noarch"
license="Apache-2.0"
depends="python3 py3-certifi py3-urllib3 py3-idna py3-chardet"
source="py3-requests-$pkgver.tar.gz::https://github.com/requests/requests/archive/v$pkgver.tar.gz"
builddir="$srcdir/requests-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py check
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="939361477f2354a926d419e4cda5f68da2c3c456089982f1f07ac5e6af54f338f78e5d7f716827324b1a8c484947e3e07484b4677c38d79c34ea071bb18d0dc6  py3-requests-2.20.1.tar.gz"
