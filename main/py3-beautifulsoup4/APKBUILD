pkgname=py3-beautifulsoup4
pkgver=4.6.3
pkgrel=0
pkgdesc="A tag-soup HTML parser library for Python"
url="https://www.crummy.com/software/BeautifulSoup/"
arch="all"
license="MIT"
depends="python3"
source="https://www.crummy.com/software/BeautifulSoup/bs4/download/4.6/beautifulsoup4-$pkgver.tar.gz"
builddir="$srcdir/beautifulsoup4-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py check
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="0cacae77843326ebee87d108b6706a7ca6943684bcccc62554d2ae5d77dfd181c97435ceca9d3e2e51962b024bbe52bc08d7f0dc516311aa87b3a1f87fb4ae23  beautifulsoup4-4.6.3.tar.gz"
