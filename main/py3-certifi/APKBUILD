pkgname=py3-certifi
pkgver=2018.10.15
pkgrel=0
pkgdesc="Python wrapper for Mozilla's CA bundle"
url="https://certifi.io/en/latest/"
arch="noarch"
license="MPL-2.0"
depends="python3"
source="https://files.pythonhosted.org/packages/41/b6/4f0cefba47656583217acd6cd797bc2db1fede0d53090fdc28ad2c8e0716/certifi-$pkgver.tar.gz"
builddir="$srcdir/certifi-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py check
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="3324ae6c4b99dda6f48aa9f0918fe045a19b19b26fcfdcca4be93ec967b9e4112d863c982686837b327f1663e308250d56ea337caeeeeb96579e08b20fca92df  certifi-2018.10.15.tar.gz"
