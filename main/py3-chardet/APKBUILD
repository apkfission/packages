pkgname=py3-chardet
pkgver=3.0.4
pkgrel=0
pkgdesc="Character encoding detection for Python"
url="https://github.com/chardet/chardet"
arch="noarch"
license="LGPL-2.1-only"
depends="python3"
source="py3-chardet-$pkgver.tar.gz::https://github.com/chardet/chardet/archive/$pkgver.tar.gz"
builddir="$srcdir/chardet-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py check
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="b433ea0e15e200df968e6d61c671c42fbd77e519eb033035c4a5c241e1f98e1dfaea6747af632788507583b3ef85b00d510b3f6ef5cf58589ceca1b3a088b357  py3-chardet-3.0.4.tar.gz"
